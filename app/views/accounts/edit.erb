<h2><%= @account.name %></h2>
<h3><% if flash.has?(:message) %>
  <%= flash[:message] %>
  <% end %></h3>

  <form action="/accounts/<%=@account.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label> Account Name: </label>
    <input type="text" name="name" value="<%=@account.name.capitalize %>"> </br>

    <label> Account Category: </label>
    <input type="text" name="category" value="<%=@account.category.capitalize %>"> </br>

    <input type="submit" value="Update"><br>

    <ul>
      <h3>Stocks Held in <%= @account.name.capitalize %></h3>
      <% if !@account.stocks.empty?%>
        <% @account.stocks.each do |stock| %>
        <li><h3><a href="/stocks/<%=stock.id%>"><%= stock.name.capitalize %></a></h3> </li><br>
       <% end%>
     <% end %>
    </ul><br>
    <a href="/stocks/new">Add Stock</a>
  </form>
